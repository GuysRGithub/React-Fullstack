<h2 class="page-header"><%= author.name %> </h2>
<div class="btn-row">
    <a class="btn btn-primary" href="/authors/<%= author.id %>/edit">Edit</a>
    <%- include("../partials/_delete_form.ejs", {url: `/authors/${author.id}`})%>     
</div>


<% if (booksByAuthor.length > 0) { %> 
    <h2>Books By Author</h2>
    <% Array.from(booksByAuthor).forEach(book => { %>
        <a href="books/<%= book.id %>">
            <img src="<%= book.coverImagePath %> " alt="bookCover" height="150" width="100">
        </a>
        
        <div><%= book.author.name %> </div>
        <% }) %>
<% } %> 